class Solution {
    public void setZeroes(int[][] matrix) {
        int n = matrix.length;
        int m = matrix[0].length;
        boolean[] rows = new boolean[n];
        boolean[] cols = new boolean[m];
        for(int i = 0;i<n;i++){
            for(int j = 0;j<m;j++){
                if(matrix[i][j] == 0){
                    if(!rows[i]){
                        rows[i]=true;
                    for(int col = 0;col<j;col++)matrix[i][col] = 0;
                    }
                    if(!cols[j]){
                        cols[j]=true;
                        for(int row = 0;row<i;row++)matrix[row][j] = 0;
                    }
                }
                else if(rows[i]||cols[j])matrix[i][j] = 0;
                else continue;
               }
            }
        return;
    }
}
